<div class="max-w-7xl mx-auto px-4 py-8">
  <!-- Flash Messages -->
  <% if flash[:notice] %>
    <div class="mb-6 bg-green-50 border-l-4 border-green-500 p-4 rounded-lg">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-green-800"><%= flash[:notice] %></p>
      </div>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded-lg">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-red-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-red-800"><%= flash[:alert] %></p>
      </div>
    </div>
  <% end %>

  <!-- Main Dashboard Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    
    <!-- LEFT COLUMN: Quick Apply Panel (2/3 width) -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <!-- Panel Header -->
        <div class="flex items-center gap-3 mb-6 pb-4 border-b border-gray-200">
          <div class="bg-blue-100 p-3 rounded-lg">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-xl font-bold text-gray-900">Quick Apply</h2>
            <p class="text-sm text-gray-500">Paste or upload a job description to generate tailored documents</p>
          </div>
        </div>

        <%= form_with model: @application, url: prepare_applications_path, method: :post, html: { class: "space-y-6", id: "quick-apply-form" } do |f| %>
          
          <!-- Job Description Textarea -->
          <div>
            <%= f.label :job_description, class: "block text-sm font-semibold text-gray-700 mb-2 flex items-center gap-2" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Job Description
            <% end %>
            <%= f.text_area :job_description, 
              rows: 16,
              placeholder: "Paste the complete job description here...\n\nExample:\nWe are looking for a Senior Rails Developer with 5+ years of experience...",
              class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono text-sm bg-gray-50 hover:bg-white transition-colors resize-none",
              data: { action: "input->application#extractMetadata" } %>
            <p class="mt-2 text-xs text-gray-500 flex items-center gap-1">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Paste the full job posting text including requirements, responsibilities, and company details
            </p>
          </div>

          <!-- File Upload Alternative -->
          <div class="border-t border-gray-200 pt-6">
            <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
              </svg>
              Or upload a file
            </label>
            <%= f.file_field :job_description_file, 
              accept: ".txt,.md,.pdf",
              class: "block w-full text-sm text-gray-600 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 cursor-pointer" %>
          </div>

          <!-- Detected Company & Role (styled as read-only) -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pt-4">
            <div>
              <%= f.label :company, class: "block text-sm font-semibold text-gray-700 mb-2 flex items-center gap-2" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                Company
              <% end %>
              <%= f.text_field :company, 
                placeholder: "Auto-detected or enter manually",
                class: "w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white" %>
            </div>

            <div>
              <%= f.label :role, class: "block text-sm font-semibold text-gray-700 mb-2 flex items-center gap-2" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                Role
              <% end %>
              <%= f.text_field :role, 
                placeholder: "Auto-detected or enter manually",
                class: "w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white" %>
            </div>
          </div>

          <!-- Info Banner -->
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
              <div>
                <p class="text-sm font-semibold text-blue-900">Truth-only generation</p>
                <p class="text-xs text-blue-700 mt-1">Your resume will only include verified skills from your profile. You'll review and select which skills to include on the next screen.</p>
              </div>
            </div>
          </div>

          <!-- Generate Button -->
          <div class="flex justify-center pt-2">
            <%= f.submit "🔍 Review Skills & Generate", 
              class: "px-8 py-4 bg-gradient-to-r from-blue-600 to-blue-700 text-white text-lg font-bold rounded-xl hover:from-blue-700 hover:to-blue-800 focus:ring-4 focus:ring-blue-300 transition-all duration-200 cursor-pointer shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 flex items-center gap-3",
              data: { disable_with: "⏳ Processing..." } %>
          </div>

        <% end %>
      </div>
    </div>

    <!-- RIGHT COLUMN: Suggested Jobs Panel (1/3 width) -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-24">
        <!-- Panel Header -->
        <div class="flex items-center gap-3 mb-6 pb-4 border-b border-gray-200">
          <div class="bg-purple-100 p-3 rounded-lg">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-bold text-gray-900">Suggested Jobs</h2>
            <p class="text-xs text-gray-500">From your job board</p>
          </div>
        </div>

        <!-- Job Cards -->
        <% if defined?(@suggested_jobs) && @suggested_jobs&.any? %>
          <div class="space-y-3 max-h-[600px] overflow-y-auto pr-2">
            <% @suggested_jobs.first(5).each do |job| %>
              <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-300 hover:shadow-md transition-all">
                <div class="flex items-start justify-between gap-2 mb-2">
                  <h3 class="font-semibold text-sm text-gray-900 leading-tight"><%= job.title %></h3>
                  <% if job.remote %>
                    <span class="flex-shrink-0 px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded">Remote</span>
                  <% end %>
                </div>
                
                <p class="text-xs text-gray-600 mb-3"><%= job.company %></p>
                
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-500"><%= job.posted_at&.strftime('%b %d') || 'Recent' %></span>
                  <%= link_to job_path(job), class: "text-xs font-semibold text-blue-600 hover:text-blue-700 flex items-center gap-1" do %>
                    View
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>

          <div class="mt-4 pt-4 border-t border-gray-200">
            <%= link_to jobs_path, class: "block text-center text-sm font-semibold text-blue-600 hover:text-blue-700" do %>
              View all jobs →
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <p class="text-sm text-gray-500 mb-2">No jobs yet</p>
            <p class="text-xs text-gray-400">Run <code class="bg-gray-100 px-2 py-0.5 rounded">rake jobs:fetch</code></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Applications Section (Full Width Below) -->
  <% if defined?(@recent_applications) && @recent_applications&.any? %>
    <div class="mt-8">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center gap-3 mb-6 pb-4 border-b border-gray-200">
          <div class="bg-green-100 p-3 rounded-lg">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-xl font-bold text-gray-900">Recent Applications</h2>
            <p class="text-sm text-gray-500">Your generated documents</p>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @recent_applications.first(6).each do |app| %>
            <%= link_to application_path(app), class: "border border-gray-200 rounded-lg p-4 hover:border-blue-300 hover:shadow-md transition-all group" do %>
              <div class="flex items-start justify-between mb-2">
                <h3 class="font-semibold text-sm text-gray-900 group-hover:text-blue-600"><%= app.role %></h3>
                <% if app.generated? %>
                  <span class="flex-shrink-0 w-2 h-2 bg-green-500 rounded-full"></span>
                <% end %>
              </div>
              <p class="text-xs text-gray-600 mb-3"><%= app.company %></p>
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <span class="text-xs text-gray-500"><%= time_ago_in_words(app.created_at) %> ago</span>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  // Auto-scroll to results after form submission
  document.addEventListener('turbo:submit-end', function(event) {
    if (event.detail.success) {
      setTimeout(() => {
        window.scrollTo({ top: document.body.scrollHeight, behavior: 'smooth' });
      }, 100);
    }
  });
</script>