<div class="max-w-4xl mx-auto py-8 px-4">
  <div class="mb-6">
    <%= link_to "â† Back to Jobs", jobs_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 mb-6">Filter Settings</h1>

  <!-- Blocked Companies Section -->
  <div class="bg-white border border-gray-200 rounded-lg p-6 mb-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Blocked Companies</h2>
    
    <!-- Add New Company Form -->
    <%= form_with model: [:settings, BlockedCompany.new], url: settings_blocked_companies_path, local: true, class: "mb-6" do |form| %>
      <div class="flex gap-4 items-end">
        <div class="flex-1">
          <%= form.label :name, "Company Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :name, placeholder: "e.g., CyberCoders", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div class="w-32">
          <%= form.label :pattern, "Regex Pattern", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.check_box :pattern, class: "mt-2" %>
        </div>
        <div class="flex-1">
          <%= form.label :reason, "Reason", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :reason, placeholder: "e.g., Spam recruiter", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div>
          <%= form.submit "Block Company", class: "px-4 py-2 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors" %>
        </div>
      </div>
    <% end %>

    <!-- Blocked Companies List -->
    <% if @blocked_companies.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Company</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reason</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @blocked_companies.each do |company| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= company.name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= company.pattern? ? "Regex" : "Exact" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= company.reason %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= button_to "Unblock", settings_blocked_company_path(company), method: :delete, 
                      class: "text-red-600 hover:text-red-800", 
                      confirm: "Unblock #{company.name}?" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No companies blocked yet.</p>
    <% end %>
  </div>

  <!-- YAML Rules Preview -->
  <div class="bg-white border border-gray-200 rounded-lg p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Current Filter Rules (Read-only)</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Required Keywords</h3>
        <div class="bg-gray-50 p-3 rounded">
          <% @rules_loader.required_keywords.each do |keyword| %>
            <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded mr-2 mb-1"><%= keyword %></span>
          <% end %>
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Excluded Keywords</h3>
        <div class="bg-gray-50 p-3 rounded">
          <% @rules_loader.excluded_keywords.each do |keyword| %>
            <span class="inline-block bg-red-100 text-red-800 text-xs px-2 py-1 rounded mr-2 mb-1"><%= keyword %></span>
          <% end %>
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Content Blocklist</h3>
        <div class="bg-gray-50 p-3 rounded">
          <% @rules_loader.content_blocklist.each do |term| %>
            <span class="inline-block bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded mr-2 mb-1"><%= term %></span>
          <% end %>
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Security Settings</h3>
        <div class="bg-gray-50 p-3 rounded">
          <p class="text-sm text-gray-600">
            <strong>Require no security clearance:</strong> <%= @rules_loader.require_no_security_clearance? ? "Yes" : "No" %>
          </p>
          <p class="text-sm text-gray-600">
            <strong>Allow background checks:</strong> <%= @rules_loader.allow_background_checks? ? "Yes" : "No" %>
          </p>
        </div>
      </div>
    </div>
    
    <div class="mt-4 p-4 bg-blue-50 border border-blue-200 rounded">
      <p class="text-sm text-blue-800">
        <strong>Note:</strong> These rules are defined in <code>config/job_wizard/rules.yml</code>. 
        To modify them, edit the YAML file directly. Company blocklist above takes precedence over YAML entries.
      </p>
    </div>
  </div>
</div>


