<% content_for :title, "AI Usage & Costs" %>

<div class="max-w-6xl mx-auto py-8 px-4">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">AI Usage & Costs</h1>
    <p class="text-gray-600">Monthly tracking of OpenAI API usage and costs</p>
  </div>

  <!-- Month Filter -->
  <div class="mb-6 bg-white rounded-lg border border-gray-200 p-4">
    <%= form_with url: ai_usages_path, method: :get, local: true, class: "flex items-center gap-4" do |form| %>
      <%= form.label :month, "Month:", class: "text-sm font-medium text-gray-700" %>
      <%= form.month_field :month, value: @month, class: "border border-gray-300 rounded-md px-3 py-2 text-sm" %>
      <%= form.submit "Go", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors" %>
    <% end %>
  </div>

  <!-- Summary Stats -->
  <div class="mb-6 bg-white rounded-lg border border-gray-200 p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Summary for <%= Date.parse("#{@month}-01").strftime('%B %Y') %></h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="bg-purple-50 rounded-lg p-4 border border-purple-200">
        <div class="text-sm text-purple-600 font-medium">Total Cost</div>
        <div class="text-3xl font-bold text-purple-900 mt-1">$<%= sprintf('%.2f', @stats[:total_dollars]) %></div>
        <div class="text-xs text-purple-600 mt-1"><%= @stats[:count] %> API calls</div>
      </div>
      
      <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
        <div class="text-sm text-blue-600 font-medium">Total Tokens</div>
        <div class="text-3xl font-bold text-blue-900 mt-1">
          <%= number_with_delimiter(@usages.sum(&:total_tokens)) %>
        </div>
        <div class="text-xs text-blue-600 mt-1">Input + Output</div>
      </div>
      
      <div class="bg-green-50 rounded-lg p-4 border border-green-200">
        <div class="text-sm text-green-600 font-medium">Avg per Call</div>
        <div class="text-3xl font-bold text-green-900 mt-1">
          <%= @stats[:count] > 0 ? sprintf('$%.3f', @stats[:total_dollars] / @stats[:count]) : '$0.00' %>
        </div>
        <div class="text-xs text-green-600 mt-1">per generation</div>
      </div>
    </div>
  </div>

  <!-- Detailed Usage Table -->
  <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Recent Usage</h2>
    </div>
    
    <% if @usages.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Feature</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Model</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Tokens</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Cost</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @usages.each do |usage| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= usage.created_at.strftime('%Y-%m-%d %H:%M') %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= usage.feature.titleize %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= usage.model %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right">
                  <%= number_with_delimiter(usage.total_tokens) %>
                  <div class="text-xs text-gray-400">
                    P:<%= number_with_delimiter(usage.prompt_tokens) %> 
                    C:<%= number_with_delimiter(usage.completion_tokens) %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 text-right">
                  $<%= sprintf('%.2f', usage.cost_dollars) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center text-gray-500">
        <p>No AI usage recorded for this month.</p>
      </div>
    <% end %>
  </div>
</div>

