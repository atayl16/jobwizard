<% content_for :title, "Edit Manual Application" %>

<div class="max-w-2xl mx-auto py-8 px-4">
  <div class="mb-6">
    <%= link_to "← Back to Applications", manual_applications_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Application</h1>

  <div class="bg-white border border-gray-200 rounded-lg p-6">
    <%= form_with model: @application, local: true do |form| %>
      <% if @application.errors.any? %>
        <div class="mb-4 bg-red-50 border border-red-200 rounded-lg p-4">
          <h3 class="text-red-800 font-semibold mb-2">Errors:</h3>
          <ul class="list-disc list-inside text-red-700">
            <% @application.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-4">
        <div>
          <%= form.label :company, "Company *", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :company, class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :position, "Position *", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :position, class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :applied_at, "Date Applied *", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.date_field :applied_at, class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :status, 
              options_for_select([
                ['Submitted', 'submitted'],
                ['Under Review', 'under_review'],
                ['Rejected', 'rejected'],
                ['Accepted', 'accepted'],
                ['Offer', 'offer']
              ], @application.status),
              {},
              { class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:ring-blue-500 focus:border-blue-500" } %>
        </div>

        <div>
          <%= form.label :job_url, "Job URL (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.url_field :job_url, placeholder: "https://...", class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :notes, "Notes", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :notes, rows: 4, class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div class="flex gap-3 pt-4">
          <%= form.submit "Update", class: "px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors" %>
          <%= link_to "Cancel", manual_applications_path, class: "px-6 py-2 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
