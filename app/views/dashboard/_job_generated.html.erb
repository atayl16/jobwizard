<div id="job_<%= job.id %>" class="border border-green-300 bg-green-50 rounded-lg p-3">
  <div class="flex items-start justify-between gap-3">
    <div class="flex-1 min-w-0">
      <h3 class="font-semibold text-gray-900 truncate"><%= job.company %></h3>
      <p class="text-sm text-gray-600 truncate"><%= job.title %></p>
      <div class="flex items-center gap-2 mt-1">
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
          ✓ PDFs Generated
        </span>
        <% if job.remote? %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
            🌍 Remote
          </span>
        <% end %>
      </div>
    </div>
    
    <div class="flex-shrink-0 flex gap-2">
      <%= link_to 'Resume', resume_application_path(application), class: 'text-xs text-blue-600 hover:text-blue-800 font-medium' %>
      <%= link_to 'Cover', cover_letter_application_path(application), class: 'text-xs text-blue-600 hover:text-blue-800 font-medium' %>
    </div>
  </div>
</div>





