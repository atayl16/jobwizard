<div class="border border-gray-200 rounded-lg p-3 hover:border-green-300 transition-colors">
  <div class="flex items-start justify-between gap-3 mb-2">
    <div class="flex-1 min-w-0">
      <h3 class="font-semibold text-gray-900 truncate"><%= app.company %></h3>
      <p class="text-sm text-gray-600 truncate"><%= app.role %></p>
      <p class="text-xs text-gray-500 mt-1"><%= time_ago_in_words(app.created_at) %> ago</p>
    </div>
    
    <% if app.generated? %>
      <span class="flex-shrink-0 inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800">
        ✓ Ready
      </span>
    <% elsif app.error? %>
      <span class="flex-shrink-0 inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-red-100 text-red-800">
        ✗ Error
      </span>
    <% else %>
      <span class="flex-shrink-0 inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
        ⋯ Draft
      </span>
    <% end %>
  </div>

  <% if app.pdfs_ready? %>
    <!-- Download Links & Actions -->
    <div class="flex flex-wrap items-center gap-2 mb-2">
      <%= link_to resume_application_path(app), class: 'inline-flex items-center gap-1 text-xs text-blue-600 hover:text-blue-800 font-medium' do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
        </svg>
        Resume
      <% end %>
      
      <%= link_to cover_letter_application_path(app), class: 'inline-flex items-center gap-1 text-xs text-blue-600 hover:text-blue-800 font-medium' do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        Cover Letter
      <% end %>

      <% if app.output_path.present? %>
        <%= button_to files_reveal_path, 
            params: { path: app.output_path }, 
            method: :post, 
            class: 'inline-flex items-center gap-1 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 px-2 py-1 rounded transition-colors', 
            form: { data: { turbo: false } } do %>
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
          </svg>
          <span>Open Folder</span>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

